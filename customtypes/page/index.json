{
  "id": "page",
  "label": "Page",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Contenu": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "parent": {
        "type": "Link",
        "config": {
          "label": "Parent",
          "select": "document",
          "customtypes": ["page"]
        }
      },
      "select": {
        "type": "Select",
        "config": {
          "label": "select",
          "placeholder": "Pick a category",
          "options": ["(none)", "New", "Best Seller"],
          "default_value": "(none)"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "custom_block": {
              "type": "SharedSlice"
            },
            "promo_banner": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            },
            "subscriptions_carrousel": {
              "type": "SharedSlice"
            },
            "avantages": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {
            "width": 2400,
            "height": 1260
          },
          "thumbnails": []
        }
      }
    },
    "Thème": {
      "theme": {
        "type": "Select",
        "config": {
          "label": "Thème",
          "placeholder": "Choisir le thème pour cette page",
          "options": ["Professionnels", "Particuliers", "Custom"]
        }
      },
      "styles_personnalises": {
        "type": "Group",
        "config": {
          "label": "Styles personnalisés",
          "repeat": true,
          "fields": {
            "rule": {
              "type": "StructuredText",
              "config": {
                "label": "rule",
                "placeholder": "Coller votre CSS Custom Rule ici",
                "allowTargetBlank": false,
                "single": "embed"
              }
            }
          }
        }
      },
      "custom_css": {
        "type": "StructuredText",
        "config": {
          "label": "Custom CSS",
          "placeholder": "CSS personnalisé (attention, remplacera les style par défaut)",
          "allowTargetBlank": false,
          "single": "embed"
        }
      }
    }
  }
}
